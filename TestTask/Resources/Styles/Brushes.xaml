<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush
        x:Key="BorderBrush"
        Color="Silver" />

    <SolidColorBrush
        x:Key="BackgroundBrush"
        Color="#373737" />

    <SolidColorBrush
        x:Key="WindowBackgroundBrush"
        Color="DimGray" />

    <SolidColorBrush
        x:Key="WhiteBrush"
        Color="White" />

    <SolidColorBrush
        x:Key="DarkGrayBrush"
        Color="DarkGray" />

    <SolidColorBrush
        x:Key="CyanBrush"
        Color="Cyan" />

    <SolidColorBrush
        x:Key="ForegroundBrush"
        Color="White" />

    <SolidColorBrush
        x:Key="ForegroundBlackBrush"
        Color="Black" />

    <LinearGradientBrush
        x:Key="GradientBrush"
        StartPoint="0,0"
        EndPoint="0,1">
        <GradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop
                    Offset="0"
                    Color="Red"/>
                <GradientStop
                    Offset="0.5"
                    Color="Green"/>
                <GradientStop
                    Offset="1"
                    Color="Blue"/>
            </GradientStopCollection>
        </GradientBrush.GradientStops>
    </LinearGradientBrush>
</ResourceDictionary>